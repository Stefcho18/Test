@model IEnumerable<Test.Models.Product>

@{
    ViewData["Title"] = "MainPage";
}

<h1>Chinese restaurant</h1>

<link href="https://fonts.googleapis.com/css2?family=ZCOOL+QingKe+HuangYou&display=swap" rel="stylesheet">
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/MainPage" asp-append-version="true" />

<div class="main_page container-fluid p-0">

    <!-- Hero секция -->
    <section class="hero d-flex align-items-center justify-content-center text-center text-white">
        <div class="overlay"></div>
        <div class="hero-content">
            <h1 class="display-3 fw-bold mb-3 text-center">Добре дошли в <span class="text-danger text-center">ChinaTaste</span></h1>
            <p class="lead mb-4">Открий вкуса на традиционната китайска кухня – прясна, ароматна и приготвена с майсторство.</p>
            <a href="/Menu" class="btn btn-danger btn-lg px-4 py-2">Виж менюто</a>
        </div>
    </section>

    <!-- За нас -->
    <section class="about py-5 text-center bg-light">
        <div class="container">
            <h2 class="mb-4">За нас</h2>
            <p class="text-muted mx-auto" style="max-width: 700px;">
                В ресторант <strong>ChinaTaste</strong> предлагаме автентични китайски ястия, приготвени по оригинални рецепти.
                Нашата мисия е да донесем вкуса на Далечния изток близо до вас – с внимание към детайла и любов към храната.
            </p>
        </div>
    </section>

    <!-- Популярни ястия -->
    <section class="popular py-5">
        <div class="container text-center">
            <h2 class="mb-5">Най-популярни ястия</h2>
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="card h-100 shadow">
                        <img src="/images/пилзе_с_ориз_зеленчуци.jpeg" class="card-img-top" alt="Пиле с ориз">
                        <div class="card-body">
                            <h5 class="card-title">Пиле с ориз и зеленчуци</h5>
                            <p class="card-text">Класическо китайско ястие с ароматен сос и свежи зеленчуци.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card h-100 shadow">
                        <img src="/images/свинско_с_сладко_кисел_сос.jpeg" class="card-img-top" alt="Сладко-кисел сос">
                        <div class="card-body">
                            <h5 class="card-title">Свинско в сладко-кисел сос</h5>
                            <p class="card-text">Крехко месо с ананас, пипер и неповторим баланс на вкусове.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card h-100 shadow">
                        <img src="/images/нудли_с_морски_дарове.jpeg" class="card-img-top h-100" alt="Нудъли">
                        <div class="card-body">
                            <h5 class="card-title">Нудъли с морски дарове</h5>
                            <p class="card-text">Изискана комбинация от скариди, калмари и ароматен соев сос.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Контакт / Футър -->
    <footer class="bg-dark text-white text-center py-3">
        <p class="mb-0">&copy; 2025 ChinaTaste | Всички права запазени.</p>
    </footer>

</div>