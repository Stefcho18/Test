@model IEnumerable<CategoryViewModel>

@{
    ViewData["Title"] = "Категории";
}

<link rel="stylesheet" href="~/css/CategoryIndex.css" />

<a asp-controller="Home" asp-action="Index" class="btn-back-menu" title="Назад">
<span>⬅ Назад</span>
 </a>

<p>
    <a asp-action="Create" class="btn btn-success">Създай нова категория</a>
</p>
<h1>@ViewData["Title"]</h1>
<table class="table">
    <thead>
        <tr>
            <th>Име на категория</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Редактирай</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Изтрий</a>
                </td>
            </tr>
        }
    </tbody>
</table>