@model Test.Models.ProductViewModel

@{
    ViewData["Title"] = "Details";
}

<link rel="stylesheet" href="~/css/Create.css" />

<a href="@ViewBag.ReturnUrl" class="btn btn-secondary">
    ⬅ Назад
</a>

<h2>@Model.Name</h2>

<p><strong>Цена:</strong> @Model.Price лв.</p>
<p><strong>Категория:</strong> @Model.Category?.Name</p>

@if (!string.IsNullOrEmpty(Model.UrlImg))
{
    <img src="@Model.UrlImg" width="300" />
}

<h4>Описание:</h4>
<p>@Model.Description</p>

